{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["src/"],
  "exclude": [
    "node_modules",
    "src/scripts/resources/*",
    "src/scripts/**/resources/*",
  ]
}
